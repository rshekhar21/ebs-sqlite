<div class="vh-100" style="background-image: url('/img/main.jpg'); background-repeat: no-repeat; background-size: cover;">
  <div class="container d-flex flex-column justify-content-center align-items-center h-75">
    <!-- branding -->
    <div class="position-fixed top-0 start-0 ms-5 mt-5 fs-2">EBS</div>
    <!-- login form -->
    <div class="w-25 h-auto rounded bg-light p-4" style="min-width: 350px;">
      <form id="login" class="d-flex flex-column gap-3">
        <div class="form-floating">
          <input type="text" name="username" class="form-control" id="username" placeholder="Username">
          <label class="form-label" for="username">USERNAME</label>
        </div>
        
        <div class="form-floating">
          <input type="password" name="password" class="form-control" id="password" placeholder="Password">
          <label class="form-label" for="password">PASSWORD</label>
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="remember">
            <label class="form-check-label" for="remember">
              Remember Me
            </label>
          </div>
          <button type="submit" class="btn btn-outline-primary btn-sm px-4">LOGIN</button>
        </div>
        <div class="status small text-danger d-none border-top"></div>
      </form>
    </div>
  </div>
</div>

<script type="module" src="/js/login.js"></script>